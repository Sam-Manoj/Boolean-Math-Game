<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="com.example.javaminiproject.StartGameController">

    <ImageView fx:id="backgroundImage" fitHeight="600" fitWidth="800" preserveRatio="false">
        <image>
            <Image url="@/com/example/javaminiproject/gamebg.png" />
        </image>
    </ImageView>

    <AnchorPane fx:id="anchorPane"> <!-- Added fx:id to the AnchorPane -->
        <Button fx:id="button1" layoutX="100" layoutY="150" onAction="#handleEasyButtonClick" prefHeight="200" prefWidth="200">
            <graphic>
                <ImageView>
                    <image>
                        <Image url="@/com/example/javaminiproject/easy.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="button2" layoutX="350" layoutY="150" onAction="#handleMediumButtonClick" prefHeight="200" prefWidth="200">
            <graphic>
                <ImageView>
                    <image>
                        <Image url="@/com/example/javaminiproject/medium.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="button3" layoutX="600" layoutY="150" onAction="#handleHardButtonClick" prefHeight="200" prefWidth="200">
            <graphic>
                <ImageView>
                    <image>
                        <Image url="@/com/example/javaminiproject/hard.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="helloButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#BackClick" prefHeight="138.0" prefWidth="413.0" translateX="1070.0" translateY="650.0">
            <graphic>
                <ImageView>
                    <image>
                        <Image url="@/com/example/javaminiproject/Back.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </AnchorPane>
</StackPane>
