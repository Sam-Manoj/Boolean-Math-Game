<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.javaminiproject.HelloController">

    <MediaView fx:id="mediaView" fitWidth="1920" fitHeight="1080"/>

    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="100.0" left="20.0" right="20.0" top="500.0"/>
        </padding>

        <!-- PLAY BUTTON -->
        <Button onAction="#onHelloButtonClick">
            <graphic>
                <ImageView>
                    <Image url="@/com/example/javaminiproject/play.png"/>
                </ImageView>
            </graphic>
        </Button>
    </VBox>
</StackPane>
